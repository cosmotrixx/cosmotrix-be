{
  "name": "cosmotrix-ai-serverless",
  "version": "1.0.0",
  "description": "A modular serverless backend for AI Agents written in TypeScript",
  "main": "api/index.ts",
  "scripts": {
    "local": "vercel dev --listen 3000",
    "start": "node api/index.js",
    "build": "tsc --noEmit",
    "test": "jest",
    "test-aurora": "npx ts-node __tests__/aurora.test.ts",
    "deploy": "vercel --prod",
    "deploy-local": "npx vercel --prod",
    "setup": "npm install && npm install -g vercel",
    "login": "vercel login",
    "env": "vercel env"
  },
  "dependencies": {
    "@google/generative-ai": "^0.15.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "axios": "^1.6.0",
    "cloudinary": "^1.41.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@vercel/node": "^3.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0",
    "vercel": "^32.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
